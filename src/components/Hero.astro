---
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import img from "/src/assets/hero.webp";

const interests = [
  { label: "3D User Interfaces", cls: "bg-pgreen" },
  { label: "XR / VR / AR", cls: "bg-pyellow" },
  { label: "Human-Computer Interaction", cls: "bg-pblue" },
  { label: "Failing Systems", cls: "bg-ppink" },
];
---

<section class="py-20 px-4 md:px-0 max-w-5xl mx-auto">
  <div class="flex flex-col md:flex-row gap-10 md:gap-0 items-center">
    <!-- LEFT: text -->
    <div class="w-full md:w-1/2 flex flex-col gap-6 items-center md:items-start">
      <h1 class="text-pblack text-center md:text-left">Hi, my name is</h1>

      <p
        class="text-5xl sm:text-6xl text-[clamp(2.5rem,5vw,3.75rem)] font-bold text-center md:text-left px-[1rem] sm:px-[1.5rem] md:px-0 leading-[0.95] break-words"
      >
        Mohammadreza Amini
      </p>

      <p class="text-center md:text-left max-w-[42ch] md:max-w-none px-[1rem] sm:px-[1.5rem] md:px-0">
        I'm a Doctoral researcher at EXtended Reality and Interaction Technologies
        <a
          href="https://users.encs.concordia.ca/~abatmaz/"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold underline underline-offset-4 hover:text-ppink transition"
        >
          (EXIT) Lab
        </a>,
        combining creativity, precision, and curiosity.
      </p>

      <!-- IMAGE: between paragraph and interests on mobile -->
      <!-- Added extra space BELOW the image for mobile with mb-[1.25rem] -->
      <div class="w-full flex justify-center md:hidden pt-[1rem] pb-[0.5rem] mb-[70px] mt-[20px]">
        <a
          aria-label="Linkedin"
          rel="noopener noreferrer"
          href="https://www.linkedin.com/in/mohammadreza-amini-15b49719a/"
          target="_blank"
          class="group"
        >
          <div
            class="bg-pblue border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative"
          >
            <div
              class="absolute -top-8 -left-12 text-5xl bg-ppink px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm"
            >
              <Icon name="vr" />
            </div>

            <div
              class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black"
            >
              <Icon name="3D" />
            </div>

            <div
              class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 pr-4 bg-pgreen pl-1 z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black"
            >
              <Icon name="connect" />
              <p>Connect Now!</p>
            </div>

            <div class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl">
              <Picture
                class="object-bottom absolute bottom-0 group-hover:scale-105 transition"
                src={img}
                format="webp"
                sizes="(max-width: 300px) 100vw, 600px"
                widths={[300, 600]}
                alt="amini, photo"
              />
            </div>
          </div>
        </a>
      </div>

      <!-- INTERESTS -->
      <div class="flex flex-wrap gap-3 justify-center md:justify-start w-full pt-0">
        {interests.map((it) => (
          <span
            class={`px-5 py-3 border-1 border-black rounded-lg shadow-card hover:shadow-hover transition whitespace-nowrap ${it.cls}`}
          >
            {it.label}
          </span>
        ))}
      </div>
    </div>

    <!-- RIGHT: image on desktop only -->
    <div class="hidden md:flex w-full md:w-1/2 justify-end p-10 group md:mt-20">
      <a
        aria-label="Linkedin"
        rel="noopener noreferrer"
        href="https://www.linkedin.com/in/mohammadreza-amini-15b49719a/"
        target="_blank"
      >
        <div
          class="bg-pblue border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative"
        >
          <div
            class="absolute -top-8 -left-12 text-5xl bg-ppink px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm"
          >
            <Icon name="vr" />
          </div>

          <div
            class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black"
          >
            <Icon name="3D" />
          </div>

          <div
            class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 pr-4 bg-pgreen pl-1 z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black"
          >
            <Icon name="connect" />
            <p>Connect Now!</p>
          </div>

          <div class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl">
            <Picture
              class="object-bottom absolute bottom-0 group-hover:scale-105 transition"
              src={img}
              format="webp"
              sizes="(max-width: 300px) 100vw, 600px"
              widths={[300, 600]}
              alt="amini, photo"
            />
          </div>
        </div>
      </a>
    </div>
  </div>
</section>
